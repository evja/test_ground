        <%= render "pergola" %>
      </div>
      <div class="text-left">
        <h3><span class="glyphicon glyphicon-menu-up"></span></h3><h6>Click here for toolbar</h6>
      </div>
    </div>
    <div class="col-md-3 white-text">
      <h4>Try it full screen</h4>
