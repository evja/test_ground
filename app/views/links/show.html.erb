<h1><%= @link.title %></h1>

<%= link_to 'Back', user_links_path(@user), class: "btn btn-info btn-lg" %>

<div class="show_link">
  <h2><%= @link.title %></h2>
  <h4><%= @link.url %> ---Total Votes : <%= @link.votes %> ---Total Comments : <%= @link.comments.count %></h4>
  <h4><%= @link.created_at.strftime("Created: %m/%d/%Y At: %I:%M %p") %></h4>
  <%= link_to 'Delete', user_link_path(@user, @link), method: :delete, class: "btn btn-danger pull-right", data: {confirm: "are you sure you want to delete this link?"} %>
  <%= link_to 'Edit', edit_user_link_path(@user, @link), class: "btn btn-success pull-right" %>

</div>